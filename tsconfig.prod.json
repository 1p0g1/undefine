{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["react", "react-dom", "node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": false,
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "allowImportingTsExtensions": false,
    "noEmit": false
  },
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "src/test", "src/**/__tests__/*"]
} 