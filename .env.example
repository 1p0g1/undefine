# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DB_PROVIDER=mock  # Options: mock, postgres

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_TLS=false

# Snowflake Configuration
SNOWFLAKE_ACCOUNT=your-account.region
SNOWFLAKE_USERNAME=your_username
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_DATABASE=your_database
SNOWFLAKE_WAREHOUSE=your_warehouse
SNOWFLAKE_SCHEMA=PUBLIC  # Optional, defaults to PUBLIC
SNOWFLAKE_ROLE=your_role  # Optional, for role-based access control

# Connection Pool Settings
SNOWFLAKE_POOL_SIZE=5  # Number of connections in the pool
SNOWFLAKE_CONNECTION_TIMEOUT=30000  # Connection timeout in ms
SNOWFLAKE_QUERY_TIMEOUT=30000  # Query timeout in ms
SNOWFLAKE_MAX_RETRIES=3  # Maximum number of connection retry attempts
SNOWFLAKE_RETRY_DELAY=1000  # Delay between retries in ms

# Authentication
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=24h

# Client Configuration
VITE_API_URL=http://localhost:3001/api

# Monitoring
PROMETHEUS_METRICS_PORT=9090

# Postgres Configuration (if using postgres)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=postgres
# POSTGRES_DB=undefine 