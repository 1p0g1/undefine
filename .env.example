# Server Configuration
PORT=3001                   # Default API server port
NODE_ENV=development        # Environment: development or production
DB_PROVIDER=supabase        # Database provider (currently only supabase supported)

# Supabase Configuration
SUPABASE_URL=your_supabase_url           # Your Supabase project URL
SUPABASE_ANON_KEY=your_supabase_anon_key # Your Supabase anonymous key

# JWT Configuration
JWT_SECRET=your_jwt_secret
JWT_EXPIRY=24h

# Client Configuration
VITE_API_URL=http://localhost:3001

# Monitoring & Metrics
ENABLE_METRICS=false        # Enable/disable metrics collection
METRICS_PORT=9090          # Port for metrics endpoint if enabled

# Game Configuration
MAX_GUESSES=6              # Maximum number of guesses allowed per game
HINT_DELAY=1000           # Delay in milliseconds between hints 