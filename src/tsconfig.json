{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@shared-types/*": ["../packages/shared-types/src/*"]
    },
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
    "types": ["vite/client"],
    "forceConsistentCasingInFileNames": true,
    "preserveSymlinks": true,
    "traceResolution": false,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__mocks__",
    "**/__fixtures__"
  ],
  "references": [
    { "path": "../packages/shared-types" }
  ]
} 