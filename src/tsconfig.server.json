{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "target": "ES2022",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "shared-types": ["../packages/shared-types/dist/index.js"],
      "shared-types/*": ["../packages/shared-types/dist/*"]
    },
    "outDir": "../dist-server",
    "skipLibCheck": true,
    "types": ["node", "react", "react-dom"],
    "declaration": true,
    "declarationDir": "../dist-server",
    "composite": true,
    "rootDir": "."
  },
  "include": ["."],
  "exclude": ["client", "tests", "**/*.test.*"],
  "references": [
    { "path": "../packages/shared-types" }
  ]
} 