{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "es2022",
    "target": "es2017",
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "rootDir": "."
  },
  "include": [
    "src/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/client/**/*"
  ]
} 