{
  "name": "undefine",
  "version": "1.0.0",
  "description": "A Word Guessing Game",
  "main": "dist-server/index.js",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "[ \"$CI\" = \"true\" ] || exit 0",
    "postinstall": "npm run build:types",
    "prebuild": "npm run typecheck:server && npm run lint || true",
    "typecheck": "npm run build:types && tsc --noEmit",
    "typecheck:server": "npm run build:types && tsc -p src/tsconfig.server.json --noEmit",
    "build": "npm run build:types && npm run build:server && npm run build:client",
    "build:minimal": "npm run build:types && npm run build:client",
    "build:render": "./render-build.sh",
    "build:types": "cd packages/shared-types && tsc",
    "build:server": "tsc -p src/tsconfig.server.json",
    "build:client": "cd client && npm run build",
    "build:client-only": "cd client && npm run build",
    "start": "node dist-server/index.js",
    "start:client-only": "cd client && npm run preview",
    "dev": "npm run build:types && concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch src/index.ts",
    "dev:client": "cd client && npm run dev",
    "lint": "eslint .",
    "fix:imports": "node scripts/maintenance/fix-imports.js",
    "fix:tests": "node scripts/maintenance/fix-test-files.js",
    "fix:shared-imports": "node scripts/maintenance/update-imports.js",
    "security:jwt": "tsx scripts/security/generate-jwt-secret.ts",
    "security:jwt:dev": "tsx scripts/security/generate-jwt-secret.ts --dev",
    "security:jwt:verify": "tsx scripts/security/verify-jwt-secret.ts",
    "security:jwt:deploy": "tsx scripts/security/deploy-jwt-secret.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:uuid": "vitest run src/tests/api-validation.test.ts",
    "test:build": "vitest run src/tests/build-freshness.test.ts",
    "test:debug": "vitest run src/tests/debug-mode.test.ts"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.4",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.9",
    "@vitejs/plugin-react": "^4.4.0",
    "axios": "^1.8.4",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "firebase": "^11.6.0",
    "get-port": "^7.1.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.13.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "pg-pool": "^3.8.0",
    "prom-client": "^14.2.0",
    "react": "^18.3.1",
    "react-confetti": "^6.4.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.5.1",
    "typescript": "^5.3.3",
    "uuid": "^11.1.0",
    "vite": "^6.3.2",
    "web-vitals": "^2.1.4",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.13",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^22.14.1",
    "@types/node-fetch": "^2.6.12",
    "@types/pg": "^8.11.11",
    "@types/react": "18.2.66",
    "@types/react-dom": "18.2.22",
    "@types/react-router-dom": "^5.3.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "vitest": "^3.1.1",
    "wait-on": "^8.0.3"
  },
  "overrides": {
    "nth-check": "^2.1.1",
    "postcss": "^8.5.3"
  }
}
