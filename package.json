{
  "name": "undefine",
  "version": "1.0.0",
  "description": "A Word Guessing Game",
  "main": "dist-server/index.js",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "client"
  ],
  "scripts": {
    "setup": "node scripts/setup-monorepo.js",
    "prebuild": "node scripts/check-types.js && npm run build:types && npm run typecheck:server && npm run lint > /dev/null 2>&1 || echo '⚠️ Skipping lint errors...'",
    "typecheck": "npm run build:types && tsc --noEmit",
    "typecheck:server": "npm run build:types && tsc -p src/tsconfig.server.json --noEmit",
    "typecheck:client": "cd client && npm run typecheck",
    "typecheck:shared": "cd packages/shared-types && npm run typecheck",
    "build": "npm run clean && npm run build:types && npm run build:server:prod && npm run build:client && npm run verify:build",
    "build:minimal": "npm run build:types && npm run build:client",
    "build:render": "./render-build.sh",
    "build:types": "cd packages/shared-types && npm install && npm run build",
    "build:server": "npm run build:types && tsc -p src/tsconfig.server.json",
    "build:server:prod": "tsc -p tsconfig.prod.json",
    "build:server:test": "npm run build:types && tsc -p tsconfig.test.json",
    "build:client": "cd client && npm install && npm run build",
    "build:client-only": "cd client && npm run build",
    "clean": "rm -rf dist-server && cd client && npm run clean && cd ../packages/shared-types && npm run clean",
    "start": "node dist-server/index.js",
    "start:client-only": "cd client && npm run preview",
    "dev": "npm run build:types && concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch src/index.ts",
    "dev:client": "cd client && npm run dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:uuid": "vitest run src/tests/api-validation.test.ts",
    "test:build": "vitest build",
    "test:run": "vitest run",
    "test:debug": "vitest run src/tests/debug-mode.test.ts",
    "verify:build": "node scripts/verify-build.js",
    "ci:verify-types": "./scripts/ci/verify-types.sh",
    "check:types": "node scripts/check-types.js"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.4",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.9",
    "@undefine/shared-types": "1.0.0",
    "@vitejs/plugin-react": "^4.4.0",
    "axios": "^1.8.4",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "firebase": "^11.6.0",
    "get-port": "^7.1.0",
    "glob": "^11.0.2",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.13.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "pg-pool": "^3.8.0",
    "prom-client": "^14.2.0",
    "react": "^18.3.1",
    "react-confetti": "^6.4.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.5.1",
    "typescript": "^5.3.3",
    "uuid": "^11.1.0",
    "vite": "^6.3.2",
    "web-vitals": "^2.1.4",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/js": "^8.56.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.15.2",
    "@types/node-fetch": "^2.6.12",
    "@types/pg": "^8.11.2",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.6",
    "@types/react-router-dom": "^5.3.3",
    "@types/testing-library__react": "^10.2.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "@vitest/coverage-istanbul": "^3.1.2",
    "@vitest/coverage-v8": "^3.1.2",
    "@vitest/ui": "^3.1.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jest": "^29.7.0",
    "node-fetch": "^3.3.2",
    "tsx": "^4.7.1",
    "vitest": "^1.6.1"
  },
  "overrides": {
    "nth-check": "^2.1.1",
    "postcss": "^8.5.3"
  }
}
