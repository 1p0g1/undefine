{
  "name": "reversedefine",
  "version": "1.0.0",
  "description": "Admin interface for Reverse Define app",
  "main": "src/index.ts",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev:server": "NODE_ENV=development node --import 'data:text/javascript,import { register } from \"node:module\"; import { pathToFileURL } from \"node:url\"; register(\"ts-node/esm\", pathToFileURL(\"./\"));' src/index.ts",
    "dev:client": "cd client && npm run dev",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "debug:dev": "NODE_ENV=development PORT=3001 DB_PROVIDER=mock DEBUG=1 concurrently \"npm run dev:server\" \"cd client && BACKEND_URL=http://localhost:3001 npm run dev\"",
    "simple:dev": "NODE_ENV=development PORT=3001 ts-node-esm src/simple-server.ts",
    "test:api": "ts-node src/tests/api-test.ts"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "axios": "^1.8.4",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "bcrypt": "^5.1.1",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "firebase": "^11.6.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.0.3",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "pg-pool": "^3.8.0",
    "prom-client": "^14.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "redis": "^4.6.5",
    "snowflake-sdk": "^2.0.3",
    "typescript": "^5.3.3",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.13",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.1",
    "@types/morgan": "^1.9.4",
    "@types/node-cache": "^4.1.3",
    "@types/pg": "^8.11.11",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@types/snowflake-sdk": "^1.6.24",
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.40.0",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.2"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "overrides": {
    "nth-check": "^2.1.1",
    "postcss": "^8.5.3"
  }
}
