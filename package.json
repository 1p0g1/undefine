{
  "name": "reversedefine",
  "version": "1.0.0",
  "description": "Admin interface for Reverse Define app",
  "main": "src/index.ts",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc",
    "dev:server": "NODE_ENV=development DB_PROVIDER=supabase tsx watch src/index.ts",
    "dev:client": "tsx client/scripts/sync-port.ts && cd client && node port-helper.js | xargs -I {} ./node_modules/.bin/vite --port {}",
    "dev": "concurrently -k -s first -n SERVER,CLIENT \"npm run dev:server\" \"wait-on .api_port && npm run dev:client\"",
    "sync-port": "tsx client/scripts/sync-port.ts",
    "debug:dev": "./scripts/kill-ports.sh && NODE_ENV=development PORT=3001 DB_PROVIDER=supabase DEBUG=1 concurrently \"npm run dev:server\" \"cd client && BACKEND_URL=http://localhost:3001 npm run dev\"",
    "simple:dev": "./scripts/kill-ports.sh && NODE_ENV=development PORT=3001 tsx watch src/simple-server.ts",
    "test:api": "ts-node src/tests/api-test.ts"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.4",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.11.24",
    "axios": "^1.8.4",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "get-port": "^7.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "pg-pool": "^3.8.0",
    "prom-client": "^14.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.13",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.1",
    "@types/morgan": "^1.9.4",
    "@types/pg": "^8.11.11",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.40.0",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "wait-on": "^8.0.3"
  },
  "overrides": {
    "nth-check": "^2.1.1",
    "postcss": "^8.5.3"
  }
}
