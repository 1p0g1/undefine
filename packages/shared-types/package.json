{
  "name": "@undefine/shared-types",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Shared type definitions for the Undefine project",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc -p tsconfig.prod.json && [ -f dist/types/index.d.ts ] || (echo '❌ Failed to generate dist/types/index.d.ts' && exit 1)",
    "build:dev": "npm run clean && tsc --build",
    "build:test": "npm run clean && tsc --build tsconfig.test.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "verify:build": "[ -f dist/types/index.d.ts ] && echo '✅ Types built successfully!' || (echo '❌ Types build failed!' && exit 1)"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "typescript": "^5.8.3",
    "vitest": "^1.2.2"
  },
  "dependencies": {
    "zod": "^3.24.3"
  }
}
