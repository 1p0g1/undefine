{
  "name": "@undefine/shared-types",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "clean": "rm -rf dist dist-test",
    "build": "npm run clean && tsc --build tsconfig.prod.json",
    "build:dev": "npm run clean && tsc --build",
    "build:test": "npm run clean && tsc --build tsconfig.test.json",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "verify:build": "npm run build && echo 'âœ… Production build OK!'"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "typescript": "^5.8.3",
    "vitest": "^1.2.2"
  },
  "dependencies": {
    "zod": "^3.24.3"
  }
}
