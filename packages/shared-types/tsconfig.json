{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@undefine/shared-types": ["src"]
    },
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "emitDeclarationOnly": false,
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/__tests__/**/*", "**/*.test.ts", "**/*.spec.ts", "node_modules", "dist"]
} 