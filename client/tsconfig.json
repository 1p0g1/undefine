{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Bundler mode */
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "composite": true,
    "declaration": true,
    "outDir": "./dist-types",
    "jsx": "react-jsx",
    "allowJs": true,
    
    /* Linting */
    "strict": true,
    "noImplicitAny": false,
    "typeRoots": ["./types", "./node_modules/@types"],
    
    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@undefine/shared-types": ["../packages/shared-types/dist/types"],
      "@undefine/shared-types/*": ["../packages/shared-types/dist/types/*"]
    },
    
    /* Source maps */
    "sourceMap": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "types", "vite.config.ts"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "src/test", "node_modules"],
  "references": [
    { "path": "./tsconfig.node.json" }
  ],
  "ts-node": {
    "transpileOnly": true
  }
}
