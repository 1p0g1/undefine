{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "Node16",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Bundler mode */
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "composite": true,
    "declaration": true,
    "outDir": "./dist-types",
    "jsx": "react-jsx",
    "allowJs": true,
    
    /* Linting */
    "strict": true,
    "noImplicitAny": false,
    "typeRoots": ["./types", "./node_modules/@types"],
    
    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../packages/shared-types/dist/*"],
      "shared-types": ["../packages/shared-types/dist/index.js"]
    }
  },
  "include": ["src", "types"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "src/test"],
  "references": [
    { "path": "./tsconfig.node.json" },
    { "path": "../packages/shared-types" }
  ],
  "ts-node": {
    "transpileOnly": true
  }
}
