{
  "extends": "./tsconfig.json",
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true,
    "moduleTypes": {
      "src/**/*": "esm"
    }
  },
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "node",
    "noEmit": true,
    "allowJs": true,
    "resolveJsonModule": true
  }
} 